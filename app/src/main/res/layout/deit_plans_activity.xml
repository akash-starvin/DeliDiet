<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DeitPlans"
        android:background="@drawable/backg" android:orientation="vertical">
    <TextView
            android:text="Diet Packs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv"
            android:textStyle="bold" android:textSize="36sp" android:textColor="#FFFFFF"
            android:textAlignment="center"/>
    <ListView
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/listView" android:dividerHeight="30dp"/>


</LinearLayout>