<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Water">

    <View
            android:id="@+id/divTop"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"/>
    <View
            android:id="@+id/divBottom"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp"/>
    <View
            android:id="@+id/divLeft"
            android:layout_width="1dp"
            android:layout_height="495dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="2dp"/>
    <View
            android:id="@+id/divRight"
            android:layout_width="1dp"
            android:layout_height="495dp"
            android:background="?android:attr/listDivider"
            android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp"/>

    <TextView
            android:id="@+id/tvWACount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="0 of 10 glasses"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.441"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divTop" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnWAInc"
            android:background="@drawable/icons8_plus_64"
            app:layout_constraintTop_toBottomOf="@+id/divider9"
            app:layout_constraintBottom_toTopOf="@+id/divBottom" app:layout_constraintEnd_toStartOf="@+id/divRight"
            android:layout_marginEnd="32dp" android:layout_marginBottom="32dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnWADec"
            android:background="@drawable/icons8_minus_64"
            app:layout_constraintTop_toBottomOf="@+id/divider9"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/divBottom" app:layout_constraintStart_toEndOf="@+id/divLeft"
            android:layout_marginStart="32dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvWACount" app:layout_constraintStart_toEndOf="@+id/divLeft"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/divRight"
            android:layout_marginEnd="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:layout_width="41dp"
                    android:layout_height="34dp"
                    android:id="@+id/btnW1"
                    android:paddingLeft="50dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:background="#b6bdc6"/>
        </android.support.constraint.ConstraintLayout>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnW2" android:background="#b6bdc6"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnW3" android:background="#b6bdc6"
                android:elevation="0dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnW4" android:background="#b6bdc6"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnW5" android:background="#b6bdc6"/>
    </LinearLayout>
    <View
            android:id="@+id/divider9"
            android:layout_width="365dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="11dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
</android.support.constraint.ConstraintLayout>