<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Payment">

    <TextView
            android:text="Make Payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textStyle="bold" android:textSize="24sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textInputLayout4">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/etPAYName" android:hint="Full Name" android:inputType="text"
                android:enabled="false"
        />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
            android:id="@+id/textInputLayout8">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Card number"
                android:maxLength="16" android:singleLine="true" android:id="@+id/etPAYNum"
                android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>
    <Spinner
            android:layout_width="160dp"
            android:layout_height="30dp" android:id="@+id/spinPAYMM"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout8"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout8"/>
    <Spinner
            android:layout_width="160dp"
            android:layout_height="29dp" android:id="@+id/spinPAYYY"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout8"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout8"
            android:layout_marginTop="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/spinPAYMM"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="164dp"
            android:layout_height="0dp"
            android:id="@+id/textInputLayout9"
            app:layout_constraintStart_toStartOf="@+id/spinPAYMM"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/spinPAYMM">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CVV" android:id="@+id/etPAYCvv"
                android:maxLength="3" android:inputType="numberPassword"/>
    </android.support.design.widget.TextInputLayout>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:id="@+id/rgPAYCardType"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout9" android:layout_marginTop="8dp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toEndOf="@+id/textView6">
        <RadioButton
                android:text="Visa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbPAYVisa" android:layout_weight="1"/>
        <RadioButton
                android:text="Master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbPAYMaster" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="Card type"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout9"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout9"/>
    <Button
            android:text="Pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnPay"
            android:background="@color/colorBlue" android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/rgPAYCardType"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="Cash on delivery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnPAYCOD"
            android:background="@color/colorBlue" android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="@+id/btnPay"
            app:layout_constraintEnd_toEndOf="@+id/btnPay"/>
    <TextView
            android:text="or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView16" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPay"/>
</android.support.constraint.ConstraintLayout>