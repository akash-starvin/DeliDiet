<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainPage" android:id="@+id/Constraintlayout">


    <android.support.constraint.Guideline android:layout_width="0dp" android:layout_height="0dp"
                                          android:id="@+id/guideline3" app:layout_constraintGuide_begin="5dp"
                                          android:orientation="horizontal" app:layout_constraintGuide_percent="0.0"/>


    <android.support.constraint.Guideline android:layout_width="0dp" android:layout_height="0dp"
                                          android:id="@+id/guideline4"
                                          android:orientation="horizontal" app:layout_constraintGuide_percent="100"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical" android:layout_height="wrap_content">
            <TextView
                    android:text="Take your pick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:textStyle="bold"
                    android:textAllCaps="true" android:textAlignment="center" android:textSize="30sp"
                    android:textColor="#000000"/>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/home_21_8_17_04"
                        android:id="@+id/imgChoosePlan" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:scaleType="fitXY"/>
                <TextView
                        android:text="Choose your meal plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8" app:layout_constraintEnd_toEndOf="@+id/imgChoosePlan"
                        app:layout_constraintStart_toStartOf="@+id/imgChoosePlan" android:layout_marginTop="180dp"
                        app:layout_constraintTop_toTopOf="@+id/imgChoosePlan"
                        app:layout_constraintHorizontal_bias="0.496" android:textStyle="bold"
                        android:textAlignment="center" android:textSize="28dp" android:textColor="#FFFFFF"/>
                <TextView
                        android:text="Meals that suits your healt goals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView8"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imgChoosePlan"
                        app:layout_constraintEnd_toEndOf="@+id/textView8"
                        app:layout_constraintStart_toStartOf="@+id/textView8" android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" app:layout_constraintVertical_bias="0.163"
                        android:textColor="#ffffff"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="10dp"
                    tools:layout_editor_absoluteX="10dp"
                    android:padding="10dp">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/home_21_8_17_05"
                        android:id="@+id/imgCreatePlan" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintBottom_toBottomOf="parent" android:scaleType="fitXY"/>
                <TextView
                        android:text="Create your own meal plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView11"
                        android:layout_marginTop="180dp"
                        app:layout_constraintTop_toTopOf="@+id/imgCreatePlan"
                        app:layout_constraintStart_toStartOf="@+id/imgCreatePlan"
                        app:layout_constraintEnd_toEndOf="@+id/imgCreatePlan" android:textStyle="bold"
                        android:textAlignment="center" android:textSize="28sp" android:textColor="#ffffff"
                />
                <TextView
                        android:text="Mix and Match meals across plans to meet your taste buds"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView12"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView11"
                        app:layout_constraintStart_toStartOf="@+id/textView11"
                        app:layout_constraintEnd_toEndOf="@+id/textView11" android:textColor="#ffffff"
                        android:textAlignment="center" android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:gravity="center"
                          android:paddingBottom="20dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"
                        android:id="@+id/iv1"
                        app:srcCompat="@drawable/m1" android:scaleType="fitXY"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"
                        android:id="@+id/iv2"
                        app:srcCompat="@drawable/m2" android:scaleType="fitXY"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/iv3"
                        app:srcCompat="@drawable/m3" android:scaleType="fitXY"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/iv4"
                        app:srcCompat="@drawable/m4" android:scaleType="fitXY"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:contentDescription="TODO" android:id="@+id/iv5"
                        app:srcCompat="@drawable/m5" android:scaleType="fitXY"/>
                <Button
                        android:text="Get Started"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/btnGetStarted"
                        android:textColor="#ffffff" android:background="@color/colorBlue"/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
    <android.support.constraint.Guideline android:layout_width="0dp" android:layout_height="0dp"
                                          android:id="@+id/guideline5" app:layout_constraintGuide_begin="5dp"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.0"/>
    <android.support.constraint.Guideline android:layout_width="0dp" android:layout_height="0dp"
                                          android:id="@+id/guideline6" app:layout_constraintGuide_begin="5dp"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="2.5"/>
</android.support.constraint.ConstraintLayout>