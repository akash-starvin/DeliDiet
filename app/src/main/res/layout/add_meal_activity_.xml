<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddMeal">

    <View
            android:id="@+id/divTop"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <View
            android:id="@+id/divBottom"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <View
            android:id="@+id/divLeft"
            android:layout_width="1dp"
            android:layout_height="495dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <View
            android:id="@+id/divRight"
            android:layout_width="1dp"
            android:layout_height="495dp"
            android:background="?android:attr/listDivider"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Add meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/divTop" app:layout_constraintStart_toEndOf="@+id/divLeft"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" android:textStyle="bold"
            android:textSize="18sp" android:textAlignment="center"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/imgAM"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toEndOf="@+id/divLeft"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/divRight" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.44" android:background="@drawable/icons8_plus_64"/>
    <EditText
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etADName"
            app:layout_constraintStart_toEndOf="@+id/divLeft" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/divRight"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imgAM"
            android:hint="Meal name"/>
    <Spinner
            android:layout_width="326dp"
            android:layout_height="0dp"
            android:id="@+id/spinAD" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etADName" app:layout_constraintStart_toStartOf="@+id/etADName"
            app:layout_constraintEnd_toEndOf="@+id/etADName"/>
    <EditText
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etADCost" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spinAD"
            app:layout_constraintStart_toStartOf="@+id/spinAD" app:layout_constraintEnd_toEndOf="@+id/spinAD"
            android:inputType="number" android:hint="Price"/>
    <EditText
            android:layout_width="328dp"
            android:layout_height="94dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/etADDes"
            app:layout_constraintStart_toStartOf="@+id/etADCost"
            app:layout_constraintTop_toBottomOf="@+id/etADCost" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/etADCost" android:hint="Desciption"/>
    <Button
            android:text="Add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAD" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etADDes" app:layout_constraintStart_toStartOf="@+id/etADDes"
            app:layout_constraintEnd_toEndOf="@+id/etADDes" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/divBottom" android:background="@color/colorBlue"
            android:textColor="#FFFFFF"
    android:enabled="false"/>
</android.support.constraint.ConstraintLayout>