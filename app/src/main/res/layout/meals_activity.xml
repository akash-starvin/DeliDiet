<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Meals" android:orientation="vertical"
android:background="@drawable/backg">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMealsPackName"
            android:textStyle="bold" android:textSize="24sp"
            android:textAlignment="center" android:textColor="#FFFFFF"/>
    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:id="@+id/rdg">
        <RadioButton
                android:text="All"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rd5" android:layout_weight="1"
                android:checked="true" android:textColor="#FFFFFF"/>
        <RadioButton
                android:text="Breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rd1" android:layout_weight="1"
                android:textColor="#FFFFFF"/>
        <RadioButton
                android:text="Lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rd2" android:layout_weight="1"
                android:textColor="#FFFFFF"/>
        <RadioButton
                android:text="Snack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rd3" android:layout_weight="1"
                android:textColor="#FFFFFF"/>
        <RadioButton
                android:text="Dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rd4" android:layout_weight="1"
                android:textColor="#FFFFFF"/>
    </RadioGroup>
    <ListView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:id="@+id/listviewMeals"
            android:dividerHeight="30dp"
            android:scrollbars="vertical"
            android:padding="30dp"/>
</LinearLayout>