<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MiniDoc">

    <TextView
            android:text="How can I help you ?"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDoc"
            android:background="@drawable/rounded_corner"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textAlignment="center" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUser" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft" android:layout_marginEnd="64dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline13"
            app:layout_constraintVertical_bias="0.0"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="16dp" android:id="@+id/guidelineTop"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="7dp"
            android:id="@+id/guidelineLeft" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="593dp"
            android:id="@+id/guideline11" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="403dp"
            android:id="@+id/guidelineRight" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"/>
    <TextView
            android:text="To start conversation type something..."
            android:layout_width="0dp"
            android:background="@drawable/rounded_corner_2"
            android:layout_height="wrap_content"
            android:id="@+id/tvUser"
            android:textColor="#FFFFFF"
            android:textAlignment="center" android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guidelineTop" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight" android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="270dp"
            android:id="@+id/guideline13" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="274dp"/>
    <TextView
            android:text="Here are somethings you can ask me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline13"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft" android:layout_marginStart="8dp"
            android:textColor="#000000" android:textStyle="bold"/>
    <Button
            android:text="  How to loose weight ?  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnQ1" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft" android:layout_marginStart="8dp"
            android:textColor="#FFFFFF" android:background="@drawable/rounded_corner"/>
    <Button
            android:text="  How to gain weight ?  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnQ2" app:layout_constraintStart_toEndOf="@+id/btnQ1"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnQ1" android:textColor="#FFFFFF"
            android:background="@drawable/rounded_corner" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="529dp"
            android:id="@+id/guideline14" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="402dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="137dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <android.support.design.widget.TextInputLayout
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline14"
            app:layout_constraintStart_toStartOf="@+id/guidelineLeft" android:layout_marginStart="8dp"
            android:id="@+id/textInputLayout11">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your message here" android:inputType="text" android:id="@+id/etMessage"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:layout_width="74dp"
            android:layout_height="48dp"
            android:id="@+id/btnSend"
            app:layout_constraintStart_toEndOf="@+id/textInputLayout11"
            android:layout_marginStart="12dp" app:layout_constraintEnd_toStartOf="@+id/guideline12"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout11" android:background="@drawable/icon_send"
            app:layout_constraintBottom_toBottomOf="@+id/textInputLayout11"/>
    <Button
            android:text="  How many glasses of water to drink daily ?  "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnQ3" app:layout_constraintStart_toStartOf="@+id/btnQ1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnQ1" android:background="@drawable/rounded_corner"
            android:textColor="#FFFFFF" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"/>
    <Button
            android:text="  How much sleep is required ?  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnQ4" app:layout_constraintStart_toStartOf="@+id/btnQ3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnQ3" android:background="@drawable/rounded_corner"
            android:textColor="#FFFFFF"/>
    <Button
            android:text="  Gym / Sports ?  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnQ5" app:layout_constraintStart_toEndOf="@+id/btnQ4"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnQ4" android:background="@drawable/rounded_corner"
            android:textColor="#FFFFFF"/>
</android.support.constraint.ConstraintLayout>